<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sport scraper</title>
    <link rel="stylesheet" href="~/tailwindcss/tailwind.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-800 font-sans leading-normal tracking-normal mt-12">

    <header>
        <!--Nav-->
        <nav aria-label="menu nav" class="bg-gray-800 pt-2 md:pt-1 pb-1 px-1 mt-0 h-auto fixed w-full z-20 top-0">
            <div class="flex flex-wrap items-center">
                <div class="flex flex-1 md:w-1/3 justify-center md:justify-start text-white px-2">                     
                    @{
                        var routeUrl = Url.RouteUrl(ViewContext.RouteData.Values);
                    }
                    @if (@routeUrl != "/")
                    {
                    <a href="/" class="text-sm"> &lt;&lt; back</a>
                    }
                </div>
                <div class="flex flex-1 md:w-1/3 justify-center md:justify-start text-white px-2">
                    <span class="relative w-full text-4xl font-bold">
                        Sportscanner
                    </span>
                </div>
                <div class="flex flex-1 md:w-1/3 justify-end  text-white px-2">
                    <a href="~/times.xml" target="_blank"><span  class="fa-solid fa-circle-down"></span> Download</a>
                 </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="flex flex-col md:flex-row">
                @RenderBody() 
        </div>
    </main>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>